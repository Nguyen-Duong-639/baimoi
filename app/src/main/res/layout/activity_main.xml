<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/findcity"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:hint="@string/city"
                    android:paddingLeft="@dimen/_2sdp"
                    android:src="@drawable/find1"
                    android:textSize="@dimen/_15sdp" />
                <EditText
                    android:id="@+id/etfindcity"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@id/findcity"
                    android:layout_width="@dimen/_190sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:background="@drawable/trongsuot"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/here"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@id/etfindcity"
                    android:src="@drawable/here1"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/maps"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@id/here"
                    android:src="@drawable/map"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/history"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@id/maps"
                    android:src="@drawable/history"
                    android:visibility="visible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <RelativeLayout
                    android:id="@+id/groupweather"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/trongsuot">

                    <ImageView
                        android:id="@+id/imagewerther"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:src="@drawable/windy" />

                    <RelativeLayout
                        android:id="@+id/recelsius"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagewerther"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/celsiusmax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/celsiusmax"
                            android:textColor="@color/white"
                            android:text="o"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_toRightOf="@id/celsiusmax"
                            android:text="C"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25sdp" />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_toRightOf="@id/celsiusmax"
                            android:text="-"
                            android:textSize="@dimen/_25sdp" />

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/celsiusmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_32sdp"
                            android:layout_toRightOf="@id/celsiusmax"
                            android:text="30"
                            android:textSize="@dimen/_25sdp" />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/celsiusmin"
                            android:text="o"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_toRightOf="@id/celsiusmin"
                            android:text="C"
                            android:textSize="@dimen/_25sdp" />

                    </RelativeLayout>

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recelsius"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="@string/clouds"
                        android:textSize="@dimen/_20sdp" />

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/cityShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/weather"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Ho Chi Minh City"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />


                </RelativeLayout>
                <TextView
                android:textColor="@color/white"
                android:id="@+id/thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groupweather"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_15sdp" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/ngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/thu"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15sdp" />


                <LinearLayout

                    android:id="@+id/group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_below="@id/ngay"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="32dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/rain_drop" />

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/doAm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:text="58%"
                            android:textSize="@dimen/_20sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/cloud" />

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/pcloud"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:text="58%"
                            android:textSize="@dimen/_20sdp" />
                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/wind" />

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tocdogio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:text="4.1m/s"
                            android:textSize="@dimen/_20sdp" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/theogio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/theongay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_125sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/cac_ngay_tiep"
                android:textSize="@dimen/_20sdp">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bieudoluongmua"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"/>

            <com.github.mikephil.charting.charts.CombinedChart
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/linechart"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>